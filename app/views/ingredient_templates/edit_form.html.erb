<h1>
  Edit ingredient #<%= @ingredient.id %>
</h1>

<hr>

<form action="/update_ingredient/<%= @ingredient.id %>" method="post">

  <input type="hidden" id="user_id" name="user_id" class="form-control" value="<%= current_user.id %>">

  <div class="form-group">
    <label for="title">
      Title
    </label>

    <input type="text" id="title" name="title" class="form-control" value="<%= @ingredient.title %>">
  </div>
  
   <div class="form-group">
    <label for="description">
      Description
    </label>

    <input type="text" id="description" name="description" class="form-control" value="<%= @ingredient.description %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update ingredient
  </button>
</form>

<hr>

<a href="/ingredients">
  Go back
</a>
