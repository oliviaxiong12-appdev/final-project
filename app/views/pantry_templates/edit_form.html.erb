<h1>
  Edit pantry #<%= @pantry.id %>
</h1>

<hr>

<form action="/update_pantry/<%= @pantry.id %>" method="post">

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @pantry.user_id %>">
  </div>

  <div class="form-group">
    <label for="ingredient_id">
      Ingredient
    </label>

    <input type="text" id="ingredient_id" name="ingredient_id" class="form-control" value="<%= @pantry.ingredient_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update pantry
  </button>
</form>

<hr>

<a href="/pantries">
  Go back
</a>
