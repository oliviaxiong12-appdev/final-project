<h1>
  Add a new pantry
</h1>


<hr>

<form action="/create_pantry" method="post">

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <input type="text" id="user_id" name="user_id" class="form-control">
  </div>

  <div class="form-group">
    <label for="ingredient_id">
      Ingredient
    </label>

    <input type="text" id="ingredient_id" name="ingredient_id" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create pantry
  </button>
</form>

<hr>

<a href="/pantries">
  Go back
</a>
