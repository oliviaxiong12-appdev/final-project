<!-- Validation failure messages -->
<% if @recipe.present? %>
  <% if @recipe.errors.any? %>
    <% @recipe.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new recipe
</h1>


<hr>

<form action="/create_recipe" method="post">

  <input type="hidden" id="user_id" name="user_id" class="form-control" value="<%= current_user.id %>">
   
  <div class="form-group">
    <label for="title">
      Title
    </label>

    <input type="text" id="title" name="title" class="form-control" value="<%= @recipe.title %>">
  </div>
  
  <div class="form-group">
    <label for="image">
      Image
    </label>

    <input type="text" id="image" name="image" class="form-control" value="<%= @recipe.image %>">
  </div>

  <div class="form-group">
    <label for="instruction">
      Instruction
    </label>

    <textarea id="instruction" name="instruction" class="form-control" rows="3"><%= @recipe.instruction %></textarea>
  </div>


  <button class="btn btn-block btn-outline-secondary">
    Create recipe
  </button>
</form>

<hr>

<a href="/recipes">
  Go back
</a>
